# Телеграм: можно любое из имён (приоритет не важен)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
# BOT_TOKEN=
# TG_BOT_TOKEN=

# Wildberries (опционально)
# Токен категории Statistics из кабинета Wildberries
WB_API_TOKEN=

# Логи
LOG_LEVEL=INFO
LOG_JSON=true
LOG_RICH=true

# Sentry (опционально)
SENTRY_DSN=

# МойСклад (опционально)
# Режим авторизации: token (Bearer) или basic (логин+пароль)
MOYSKLAD_AUTH_MODE=token
# Если выбран режим basic — раскомментируйте и заполните логин+пароль
# MOYSKLAD_LOGIN=
# MOYSKLAD_PASSWORD=
# Если выбран режим token — укажите API-токен
MOYSKLAD_TOKEN=
# Размер страницы при обходе отчёта /report/stock/all
MOYSKLAD_PAGE_SIZE=1000
# Какое поле из МойСклад использовать: quantity или stock
MOYSKLAD_QUANTITY_FIELD=quantity

# Имя нашего склада для итоговой выгрузки (попадает в колонку «Склад»)
LOCAL_STORE_NAME=FootballShop
